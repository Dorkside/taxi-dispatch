rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.token.phone_number));
    }
  	function isChauffeur() {
      return exists(/databases/$(database)/documents/chauffeurs/$(request.auth.token.phone_number));
    }

    match /{document=**} {
      allow write: if request.auth.token.phone_number == "+33762686070";
      allow read: if request.auth != null && isAdmin();
    }
    match /patients/{document=**} {
      allow read: if request.auth != null && (isAdmin() || isChauffeur());
    }
    match /courses/{document=**} {
      allow read: if request.auth != null && (isAdmin() || (isChauffeur() && resource.data.chauffeur_id == request.auth.token.phone_number));
    }
    match /chauffeurs/{chauffeurId}/{document=**} {
      allow read: if request.auth != null && (isAdmin() || (isChauffeur() && chauffeurId == request.auth.token.phone_number));
    }
  }
}